<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.preethakumaresan.myapplication.MainActivity"
    android:orientation="vertical"
    android:id="@+id/layoutRel">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/countView"
        android:layout_marginTop="145dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginLeft="90dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/increase"
        android:id="@+id/incrButt"
        android:layout_marginEnd="142dp"
        android:layout_marginRight="144dp"
        android:layout_alignBottom="@+id/countView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        android:id="@+id/resetButt"
        android:layout_below="@+id/incrButt"
        android:layout_alignRight="@+id/incrButt"
        android:layout_alignEnd="@+id/incrButt" />


</RelativeLayout>
